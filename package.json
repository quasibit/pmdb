{
  "name": "pmdb",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "postinstall": "husky install",
    "commit": "git-cz",
    "commitlint": "commitlint --to=HEAD",
    "prettier": "prettier \"**/*.{js,jsx,ts,tsx,json,md,css,scss,yaml,yml}\"",
    "lint": "run-p --continue-on-error lint:*",
    "lint:prettier": "yarn run prettier --check",
    "format": "run-s format:*",
    "format:prettier": "yarn run prettier --write"
  },
  "dependencies": {
    "next": "10.0.6",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "commitizen": "^4.2.3",
    "husky": "^5.0.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
